<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Guest House</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color: burlywood">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" style="background-color: saddlebrown">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span style="font-family: Harrington">@Html.ActionLink("Q's Lodge", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</span>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="align-items:center">
                    <li>@Html.ActionLink("Accomodation", "Accomodation", "Home")</li>
                    <li>@Html.ActionLink("About Q's", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact Q's", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="background-color: darkolivegreen">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - NanoDev </p>
            <address>
                <strong>Contact: </strong><span class="glyphicon glyphicon-envelope"></span><a style="color:black" href="mailto:Support@example.com">boinelol@outlook.com</a><br />
            </address>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
