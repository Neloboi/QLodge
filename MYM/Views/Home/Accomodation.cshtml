
@{
    ViewBag.Title = "Accomodation";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>


<div class="container">
    <div class="row">
        @*<div class="col-md-4">
            <a href="#">
                <img src="~/Images/Rooms/bed.jpg" class="img-responsive"/>
            </a>
        </div>*@
        <div>
            <h2>The Rooms</h2>
            <p>
                <strong>
                    <br />
                    The rooms at Q's Lodge boast of:
                </strong>
                <ul>
                    <li>    Contemporary upmarket comfortable design</li>
                    <li>    Luxurious Bed and linen</li>
                    <li>	Complimentary waters Tea and coffee stations in room</li>
                    <li>	Modern Flat screens with hotel Bouquet</li>
                    <li>	Wireless complimentary internet</li>
                </ul>

                @*<button class="btn btn-primary; pull-right" id="roomTourButton"> Take the tour</button>*@
            </p>
        </div>
    </div>
    <div class="row">
        <ul class="list-inline">
            <li data-toggle="modal" data-target="#myModal">
                <a href="#myGallery" data-slide-to="0" style="color:black">
                    <img class="img-thumbnail; img-responsive" src="~/Images/Rooms/ibhubesi.jpg" style="height:200px; width:200px;" ><br>
                    Ibhubesi <br />
                </a> 
            </li>
            <li data-toggle="modal" data-target="#myModal">
                <a href="#myGallery" data-slide-to="1" style="color:black">
                    <img class="img-thumbnail; img-responsive" src="~/Images/Rooms/Nkandla.jpg" style="height:200px; width:200px"><br>
                    Nkandla
                </a>
            </li>
            <li data-toggle="modal" data-target="#myModal">
                <a href="#myGallery" data-slide-to="2" style="color:black">
                    <img class="img-thumbnail; img-responsive" src="~/Images/Rooms/Emlanjeni.jpg" style="height:200px; width:200px"><br>
                    Emlanjeni <br />
                </a>
            </li>
            <li data-toggle="modal" data-target="#myModal">
                <a href="#myGallery" data-slide-to="3" style="color:black">
                    <img class="img-thumbnail; img-responsive" src="~/Images/Rooms/washingtonjpg.jpg" style="height:200px; width:200px"><br>
                    Washington D.C <br />
                </a>
            </li>
            <li data-toggle="modal" data-target="#myModal">
                <a href="#myGallery" data-slide-to="4" style="color:black">
                    <img class="img-thumbnail; img-responsive" src="~/Images/Rooms/Venice.jpg" style="height:200px; width:200px"><br>
                    Venice, Italy <br />
                </a>
            </li>
            <li data-toggle="modal" data-target="#myModal">
                <a href="#myGallery" data-slide-to="5" style="color:black">
                    <img class="img-thumbnail; img-responsive" src="~/Images/Rooms/zanzibar.jpg" style="height:200px; width:200px"><br>
                    Zanzibar <br />
                </a>
            </li>
            <!--end of thumbnails-->
        </ul>
    </div>
</div>

<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="pull-left">The rooms </div>
                <button type="button" class="close" data-dismiss="modal" title="Close"> <span class="glyphicon glyphicon-remove"></span></button>
            </div>
            <div class="modal-body">

                <!--CAROUSEL CODE GOES HERE-->
                <!--begin carousel-->
                <div id="myGallery" class="carousel slide" data-interval="false">
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="http://lorempixel.com/600/400/nature/1" alt="item0">
                            <div class="carousel-caption">
                                <h3>Heading 3</h3>
                                <p>Slide 0  description.</p>
                            </div>
                        </div>
                        <div class="item">
                            <img src="http://lorempixel.com/600/400/nature/2" alt="item1">
                            <div class="carousel-caption">
                                <h3>Heading 3</h3>
                                <p>Slide 1 description.</p>
                            </div>
                        </div>
                        <div class="item">
                            <img src="http://lorempixel.com/600/400/nature/3" alt="item2">
                            <div class="carousel-caption">
                                <h3>Heading 3</h3>
                                <p>Slide 2  description.</p>
                            </div>
                        </div>
                        <div class="item">
                            <img src="http://lorempixel.com/600/400/nature/4" alt="item3">
                            <div class="carousel-caption">
                                <h3>Heading 3</h3>
                                <p>Slide 3 description.</p>
                            </div>
                        </div>
                        <div class="item">
                            <img src="http://lorempixel.com/600/400/nature/5" alt="item4">
                            <div class="carousel-caption">
                                <h3>Heading 3</h3>
                                <p>Slide 4 description.</p>
                            </div>
                        </div>
                        <div class="item">
                            <img src="http://lorempixel.com/600/400/nature/6" alt="item5">
                            <div class="carousel-caption">
                                <h3>Heading 3</h3>
                                <p>Slide 5 description.</p>
                            </div>
                        </div>
                        <!--end carousel-inner-->
                    </div>
                    <!--Begin Previous and Next buttons-->
                    <a class="left carousel-control" href="#myGallery" role="button" data-slide="prev"> <span class="glyphicon glyphicon-chevron-left"></span></a> <a class="right carousel-control" href="#myGallery" role="button" data-slide="next"> <span class="glyphicon glyphicon-chevron-right"></span></a>
                    <!--end carousel-->
                </div>



                <!--end modal-body-->
            </div>
            <div class="modal-footer">
                <div class="pull-left">
                </div>
                <button class="btn-sm close" type="button" data-dismiss="modal">Close</button>
                <!--end modal-footer-->
            </div>
            <!--end modal-content-->
        </div>
        <!--end modal-dialoge-->
    </div>
    <!--end myModal-->>
</div>


<!--Pop-up modal when Image in carousel is clicked-->



