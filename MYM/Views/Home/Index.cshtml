@{
    ViewBag.Title = "Q's Lodge on 14 Nelson Mandela Drive";
}

<div class="jumbotron" style="padding: 0 0">
    <div id="homePageCarousel" class="carousel slide" data-ride="carousel" style="padding: 0 0">
        <ol class="carousel-indicators">
            <li data-target="homePageCarousel" data-slide="0" class="active"></li>
            <li data-target="homePageCarousel" data-slide="1"></li>
            <li data-target="homePageCarousel" data-slide="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/Images/home.jpg" alt="Picture 1"   width="460" height="345"/>
            </div>
            <div class="item">
                <img src="~/Images/home1.jpg" alt="Picture 2"   width="460" height="345"/>
            </div>
            <div class="item">
                <img src="~/Images/home2.jpg" alt="Picture 3"   width="460" height="345"/>
            </div>
            <div class="item">
                <img src="~/Images/home3.jpg" alt="Picture 4"  width="460" height="345"/>
            </div>
        </div>
        <a class="left carousel-control" href="#homePageCarousel" role="button" data-slide="prev">
            <span class="icon-prev" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#homePageCarousel" role="button" data-slide="next">
            <span class="icon-next" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


<div class="row">
    <div class="col-md-4">
        <h2>The Guest House</h2>
        <p>
            For a prefect experiences with a comfortable modern setting Q&rsquo;s Guest house offers the prefect accommodation.
            Set in the town of Standerton Meyerville recently opened  Q&rsquo;s Guest house has lots to offer.
        </p>
        <a href='@Url.Action("About", "Home")'>
            <span class="btn btn-primary">Read about Q's &raquo;</span>
        </a>
    </div>
    <div class="col-md-4">
        <h2>Rooms/Accomodation</h2>
        <p>
            <ul>
                <li>Contemporary upmarket comfortable design</li>
                <li>    Luxurious Bed and linen</li>
                <li>	Complimentary waters Tea and coffee stations in room</li>
                <li>	Modern Flat screens with hotel Bouquet</li>
                <li>	Wireless complimentary internet</li>
            </ul>
        </p>
        <a href = '@Url.Action("Accomodation", "Home")'>
            <span class="btn btn-primary">View Rooms &raquo;</span>
        </a>
    </div>
    <div class="col-md-4">
        <h2>Features/ Additional extras/ facilities/  services</h2>
        <ul>
            <li>    Full English breakfast </li>
            <li>	All day tea and coffee Bar </li>
            <li>    Outdoor relax area </li>
            <li>	Full restaurant </li>
            <li>    Laundry on premises</li>
            <li>	Dinner by arrangement</li>
            <li>	Secure parking </li>
        </ul>
        <a href='@Url.Action("Contact", "Home")'>
            <span class="btn btn-primary">Contact Q's &raquo;</span>
        </a>
    </div>
</div>